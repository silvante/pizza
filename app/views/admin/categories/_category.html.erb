<div id="<%= dom_id category %>" class="bg-white border rounded-lg">
  <div class="p-4 flex justify-between items-center">
    <div class="flex gap-5">
      <% if category.product.length >= 1 %>
        <i class="bg-green-500 px-1 py-3 rounded-full"></i>
      <% else %>
        <i class="bg-red-500 px-1 py-3 rounded-full"></i>
      <% end %>
      <% if category.image.attached? %>
        <%= image_tag category.thumbnail, class: "w-10"%>
      <% end %>
    </div>
    <div>
      <p class=" opacity-70 font-medium">tur nomi:</p>
      <p class="font-semibold"><%= category.title %></p>
    </div>
    <div>
      <p class=" opacity-70 font-medium">jami mahsulotlar soni:</p>
      <p class="font-semibold"><%= category.product.length %></p>
    </div>
    <%= link_to edit_admin_category_path(category) do %>
      <p class="flex items-center bg-base py-2 px-4 rounded-lg text-white"><i class='bx bx-edit text-xl mr-2'></i> Taxrirlash</p>
    <% end %>
  </div>
  <div class="border-t p-4 flex items-center justify-between">
    <p><strong>yaratilgan sana:</strong> <%= category.created_at %></p>
    <p><strong>tahrirlangan sana:</strong> <%= category.updated_at %></p>
  </div>
</div>
